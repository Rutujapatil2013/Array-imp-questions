// Not handling duplicates in array
#include<bits/stdc++.h>
using namespace std;

void print_union(int arr1[],int arr2[], int m, int n)
{
    int i=0,j=0;
    while(i<m && j<n)
    {
        if (arr1[i]<arr2[j])
            cout<<arr1[i++]<<" ";
        else if(arr2[j]<arr1[i])
            cout<<arr2[j++]<<" ";
        else
            {
            cout<<arr2[j++]<<" ";
            i++;
            }
    }
    
    while(i<m)
    {
        cout<<arr1[i++]<<" ";
    }
    while(j<n)
    {
        cout<<arr2[j++]<<" ";
    }
}

//Driver code
int main()
{
    int arr1[]={1,3,7,10};
    int arr2[]={2,3,5,7,8,12};
    int m=sizeof(arr1)/sizeof(arr1[0]);
    int n=sizeof(arr2)/sizeof(arr2[0]);
    print_union(arr1,arr2,m,n);
}

output:
1 2 3 5 7 8 10 12 
Time Complexity : O(m + n)
Auxiliary Space: O(1)
